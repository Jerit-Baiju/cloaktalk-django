# Django Environment Variables
DJANGO_SECRET_KEY=your-secret-key-here
CLIENT_HOST=http://localhost:3000
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Server Configuration
PORT=8000

# Redis Configuration
# For local development with docker-compose, use 'redis'
# For production with infra container, use the redis hostname from infra_default network
REDIS_HOST=infra-redis
REDIS_PORT=6379
REDIS_DB=0

# Database Configuration
# PostgreSQL (for production and local with infra container)
# IMPORTANT: Set these to match your infra/.env POSTGRES_USER and POSTGRES_PASSWORD values
DB_ENGINE=django.db.backends.postgresql
DB_NAME=cloaktalk
DB_USER=postgres
DB_PASSWORD=postgres_password_here
DB_HOST=infra-postgres
DB_PORT=5432
